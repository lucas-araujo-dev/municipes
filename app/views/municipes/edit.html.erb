<div class="mx-auto md:w-2/3 w-full">
  <div class="flex justify-between">
    <h1 class="font-bold text-4xl"><%= t('actions.edit', model: Municipe.name.humanize) %></h1>

    <% if @municipe.picture.present? %>
      <%= image_tag @municipe.picture.url, class: "rounded-full", style: "max-width: 100px; max-height: 100px;" %>
    <% end %>
  </div>

  <%= render "form", municipe: @municipe %>

  <%= link_to t('helpers.subtitles.back'), municipes_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>
